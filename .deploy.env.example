DEPLOY_HOST=user@your-server
DEPLOY_PORT=22
DEPLOY_PATH=/var/www/html
# 1 = sync vendor/ to avoid running composer on server (fastest)
# 0 = exclude vendor/ and run composer install remotely
DEPLOY_FAST=1

# Optional: override rsync excludes as a space-separated list
# RSYNC_EXCLUDES=".git/ node_modules/ storage/framework/cache/ storage/logs/ .env"

